<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3F51B5"
        android:id="@+id/header_title">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Share Preferences"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_below="@id/header_title"
        android:layout_centerHorizontal="true"
        android:id="@+id/screen_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/screen_background"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="#CCCCCC"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/screen_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textSize="80sp"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/black_button"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                app:cornerRadius="0dp"
                android:backgroundTint="@color/black"
                android:text="BLACK"
                android:textSize="12sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/red_button"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                app:cornerRadius="0dp"
                android:backgroundTint="#FFFF0000"
                android:text="RED"
                android:textSize="12sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/blue_button"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                app:cornerRadius="0dp"
                android:backgroundTint="#FF0000FF"
                android:text="BLUE"
                android:textSize="12sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/green_button"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                app:cornerRadius="0dp"
                android:backgroundTint="#FF00FF00"
                android:text="GREEN"
                android:textSize="12sp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/count_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#CCCC"
            app:cornerRadius="0dp"
            android:layout_marginTop="20dp"
            android:text="COUNT"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#CCCC"
            app:cornerRadius="0dp"
            android:layout_marginTop="2dp"
            android:text="RESET"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:gravity="center"/>

    </LinearLayout>


</RelativeLayout>